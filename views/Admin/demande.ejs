                <div class="w3-container">
                    <h1 style="text-align: center">Les Commandes </h1>
                </div>
                <div class="container">
                  <% errors.forEach(function(error) { %>
                    <div class="alert alert-danger" role="alert">
                    <%= error %>
                    </div>
                    <% }) %>
                    <% infos.forEach(function(info) { %>
                    <div class="alert alert-info" role="alert">
                    <%= info %>
                    </div>
                    <% }) %>
                </div>
                <div class="container"> 
                    <div class="card">
             <div class="row">

                    <table class="table table-light">
                        <thead>
                          <tr>
                            <th scope="col">le nom</th>
                            <th scope="col">le prenom</th>
                            <th scope="col">email</th>
                            <th scope="col">sexe</th>
                            <th scope="col">adress</th>
                           
                            <th scope="col">Date</th>
                            <th scope="col">option</th>
                          </tr>
                        </thead>
                        <tbody>
                           
                             <% List.forEach(function(client) { %> 
                              <% if (client.cammande === false) {%>
                          <tr>
                           
                           <td> <%=  client.userclient.Firstname%> <br></td>
                            <td><%=  client.userclient.Lastname %></td>
                            <td><%= client.userclient.email %></td>
                            <td><%= client.userclient.Sexe%></td>
                            <td><%= client.userclient.Address%></td>
                            
                            <% var date = client.createdAt %>
                            <td ><%=    date.toDateString() %> // <%=    date.toLocaleTimeString() %></td>
                            <td ><a href="/commande/<%= client._id%>" class="btn btn-success">Envoyer la Commande</a><a href="/produitDetail/<%= client.list.produit._id%>" class="btn btn-default">voir la commande</a> </td>
                         
                          </tr>
                          <% } %>  <% }) %> 
                        </tbody>
                      </table>
          

             </div>
                 <hr>

                </div> 
              <h1>Liste Envoyer</h1>
              <div class="card">
                <div class="row">
   
                       <table class="table table-light">
                           <thead>
                             <tr>
                               <th scope="col">le nom</th>
                               <th scope="col">le prenom</th>
                               <th scope="col">email</th>
                               <th scope="col">sexe</th>
                               <th scope="col">adress</th>
                               <th scope="col">plus de details</th>
                               <th scope="col">Date</th>
                             </tr>
                           </thead>
                           <tbody>
                              
                                <% List.forEach(function(client) { %> 
                                  <% if (client.cammande === true) {%>
                             <tr>
                          
                             
                              <td> <%=  client.userclient.Firstname%> <br></td>
                               <td><%=  client.userclient.Lastname %></td>
                               <td><%= client.userclient.email %></td>
                               <td><%= client.userclient.Sexe%></td>
                               <td><%= client.userclient.Address%></td>
                               
                               <% var date = client.createdAt %>
                               <td ><%=    date.toDateString() %> // <%=    date.toLocaleTimeString() %></td>
                               <td ><a href="/produitDetail/<%= client.list.produit._id%>"  class="btn btn-default">voir la commande</a> </td>
                            
                             </tr>
                             <% } %>
                            <% }) %> 
                           </tbody>
                         </table>
             
   
                </div>
                    <hr>
   
                   </div> </div>
